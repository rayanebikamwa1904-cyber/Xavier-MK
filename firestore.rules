rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to identify the admin user by email.
    function isAdmin() {
      return request.auth.token.email == 'benjibikamwa@gmail.com';
    }

    // USERS: Publicly readable, but only the user can write to their own document.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }

    // PLATFORM SETTINGS: Publicly readable, but only the admin can write.
    match /platform/settings {
      allow read: if true;
      allow write: if isAdmin();
    }

    // REVIEWS: Publicly readable, but only authenticated users can create them.
    // Users can only edit or delete their own reviews.
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }

    // POSTS: Publicly readable, but only authenticated users can create them.
    // Users can only edit or delete their own posts.
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }
  }
}
